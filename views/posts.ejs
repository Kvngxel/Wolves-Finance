<%- include("partials/header") %>


<!-- HEADING -->

<div class="container-article">
  <h6><%= postType %></h6>
  <div class="">
    <img class="mainImage" src="/<%= image %>" alt="Smiley face">
    <h6 class="posts-date"><%= postDate %></h6>
  </div>
  <h1 class="hech"> <%= title %> </h1>
  <div class="multiline post-width">
    <%= bigText %>
  </div>
  <hr>
  <!-- Add avatar functionality Later -->

  <!-- <div class="avatar">
    <img src="/images/userAvatar-1.png" class="userIcon" alt="">
    <h4 class="userIconText"> Eze Excel </h4>
    <p class="iconTitle" > Content Manager</p>
  </div>   -->

  <% if (myPost === true || userId === "Admin"){%>
    <a href="/edit" class="btn-profile btn-outline-secondary">Edit post</a>
    <a href="/delete" class="btn-profile btn-danger" onclick="return confirm('Are you sure you want to delete this post?');">Delete post</a>
  <% } %>
  
</div>

<div class="rec-article">
  <h4>Latest Articles</h4>
  <% Posts.slice(-3).reverse().forEach(function(post){ %>
    <div class="article-rec">
        <div class="row">
          <div class="col-sm-3 col-md-4 col-lg-3">
          <a class="aaa" href="/posts/<%=post.name%>">              
            <img src="/<%= post.image %>" alt="">
          </a>
          </div>
          <div class="col-sm-9 col-md-8 col-lg-9">
            <a class="aaa" href="/posts/<%=post.name%>">
              <h5><%= post.name %></h5>
              <p ><%= (post.post.substring(0, 100) + "...") %> <br><a href="/posts/<%=post.name%>" >Read More</a>  </p>            
            </a>
            </div>
        </div>
    </div>  
  <% }); %>
</div>


<%- include("partials/footer") %>
