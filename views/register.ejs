<%- include("partials/header") %>


  <div class="container loginRow">  


    <div class="col-md-12">

      <div class="centerDiv">

        <h2 class="auth-h2">Create Account</h2>

         <!-- Flash Message from app.js Register validation  -->
         <% if ( message.length > 0){ %>
          <div class="alert custom-alert">
            <%= message %>
          </div>
        <% } %> 

          <form action="/register" method="POST">
            <div class="form-group spacing">
              <label for="AccountName">User Name</label>
              <input type="text" name="accountName" class="form-control" id="AccountName" aria-describedby="emailHelp" placeholder="Something Unique :)">
            </div>
            <div class="form-group spacing">
              <label for="exampleInputEmail1">Email</label>
              <input type="email" name="username" required="required" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group spacing">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" name="password" required="required" class="form-control" id="exampleInputPassword1" placeholder="Password">
              <small class="form-text text-muted">Something you'd remember.</small>           
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Remember Me</label>
            </div>
            <small id="emailHelp" class="form-text text-muted">By Creating an account, I agree to the <a href="#">Terms</a> and <a href="#">Privacy Policy.</a></small>
            <br/>
            <button type="submit" class="btn btn-primary submit">Submit</button>
            <p class="endRegister">Already a User? <a href="/login">Login</a></p>
          </form>
      </div>

    </div>

  </div>


<%- include("partials/footer") %>
