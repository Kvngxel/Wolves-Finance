<%- include("partials/header") %> 

  <div class="my-profile">
    <div class="profile-dash">
      <img class="profile-pic" src="/favicon/profile-default.png" alt="Profile Pic">
    </div>
    <div class="row">
      <div class="col-lg-4">
        <h3 class="my-profile-name"> <%= firstNameEdit %> <%= lastNameEdit %></h3>
        <p class="my-profile-p"><%= bloggerStatusEdit %></p>
        <h4 class="my-profile-username" ><%= accountName %></h4>
        <p class="my-profile-p" ><%= username %></p>
        <hr>
        <p class="my-profile-about"> <%= aboutEdit %></p>
      </div>
      <!-- Posts Section  -->
      <div class="col-lg-8">
        <div class="profile-bg">
        <div class="profile-container">
          <div class="row">
            <% if(noPost ===  false){ %>
              <h4>My Posts</h4>
            </div>
            <div class="posts-container border">
              <div class="row">
                <% userPosts.slice(-6).reverse().forEach(function(post){ %>                
                    <div class="col-lg-4 col-md-6">
                        <div class="profile-post">
                            <img class="my-profile-pic" src="<%= post.image%>" alt="Post image">
                            <div class="my-post-text">
                            <h3><%= (post.name) %></h3>
                            <p><%= (post.post.substring(0, 35) + "...") %> <br><a href="/posts/<%=post.name%>" >Read More</a>  </p>
                            </div>
                        </div>
                    </div>
                <% }); %>                    
              </div> 
              <p class="see-all"><a href="/myPosts"> See all...</a></p>          
            </div>
            <% } else { %>
            <div class="profile-no-post border">
                <img src="/images/no_post.png" alt="No post Img">
            </div> 
            <% } %>
          </div>            
        </div>
      </div>
        </div>
        
    </div>
    <div class="d-grid my-profile-button gap-2 col-6 mx-auto">
      <a href="/profile" class="btn-profile btn-outline-danger">Edit Profile</a>
    </div>
  </div>


<%- include("partials/footer") %>
